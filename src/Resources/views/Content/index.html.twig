{% extends "ShuweeAdminBundle::page_content.html.twig" %}

{% block page_title %}{{ 'crud.list' | trans({}, 'ShuweeAdminBundle') }} - {{ admin_get_label(datagrid.admin, true) }}{% endblock %}

{% block action_links %}
{% spaceless %}
    {{ datagrid_list_actions(datagrid) }}
{% endspaceless %}
{%  endblock %}

{% block header_title %}
    {{ 'crud.list' | trans({}, 'ShuweeAdminBundle') }} <small>{{ admin_get_label(datagrid.admin, true) }}</small>
{% endblock %}

{% block body %}
    {% if (datagrid.hasFilters) %}
    <div class="panel panel-default datagrid-filters">
        {{ datagrid_filters(datagrid) }}
    </div>
    {% endif %}
    <div class="panel panel-default">
        {{ datagrid(datagrid) }}
    </div>
{% endblock %}
